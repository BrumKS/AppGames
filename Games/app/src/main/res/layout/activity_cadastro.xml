<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:padding="20px"
    tools:context=".activities.CadastroActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Game"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/etJogo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Nome do Game"
        android:inputType="textPersonName|textCapWords"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="80dp" />

    <EditText
        android:id="@+id/etGenero"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Genero do Game"
        android:inputType="textPersonName|textCapWords"
        app:layout_constraintTop_toBottomOf="@+id/etJogo"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/etProdutora"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Produtora do Game"
        android:inputType="textPersonName|textCapWords"
        app:layout_constraintTop_toBottomOf="@+id/etGenero"
        tools:layout_editor_absoluteX="8dp" />


    <EditText
        android:id="@+id/etTipo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Tipo (Multi - Coop - Single)"
        android:inputType="textPersonName|textCapWords"
        app:layout_constraintTop_toBottomOf="@+id/etProdutora" />


    <Button
        android:id="@+id/bSalvar"
        android:layout_width="214dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:text="Salvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTipo" />

</androidx.constraintlayout.widget.ConstraintLayout>